<h1 class="text-xl font-bold mb-4">Add a New Location</h1>

<%= button_to "Use My Current Location", current_location_forecast_path, method: :get, class: "btn btn-primary" %>

<%= form_with model: @location, local: true, class: "space-y-4" do |form| %>
  <div class="flex flex-col">
    <%= form.label :name, "Location Name", class: "font-semibold mb-2" %>
    <%= form.text_field :name, class: "w-full p-2 border border-gray-300 rounded", placeholder: "e.g., New York City" %>
  </div>

  <div class="flex flex-col">
    <%= form.label :latitude, "Latitude", class: "font-semibold mb-2" %>
    <%= form.text_field :latitude, class: "w-full p-2 border border-gray-300 rounded", placeholder: "e.g., 40.7128" %>
  </div>

  <div class="flex flex-col">
    <%= form.label :longitude, "Longitude", class: "font-semibold mb-2" %>
    <%= form.text_field :longitude, class: "w-full p-2 border border-gray-300 rounded", placeholder: "e.g., -74.0060" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Save Location", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %>
  </div>
<% end %>

<h2>Add a Location by Address</h2>
<%= form_with url: geocode_address_locations_path, method: :post, local: true, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :address, "Enter Address", class: "block font-medium text-gray-700" %>
    <%= form.text_field :address, placeholder: "e.g., 1600 Pennsylvania Ave NW, Washington, DC", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>
  <div>
    <%= form.submit "Find Location", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>

<%= link_to "Back to Locations", locations_path, class: "text-blue-500 hover:underline mt-4 block" %>

